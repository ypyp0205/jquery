<script type="text/javascript">
	
$(function(){
  $('#btn1').on('click', function(){
	  // 전체 p를 검색
$('p').css('color', 'red');
})


$('#btn2').on('click', function(){
	// 1번째 form 안의 p를 선택
	$('p', document.forms[1]).css('color', 'green')
	                         .css('font-size', '1.5em');
   })

   
   $('.dd').on('click', function(){
	   $('p', this).css('background', 'lime');
	   
   })
})

	  

	
</script>
