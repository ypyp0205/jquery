<script type="text/javascript">
	$(function(){
		$('.box1 p').click(function(){
			$(this).css('font-size', '+=2px');
			// 랜덤으로 배경색을 지정한다.
			r = Math.floor(Math.random()*256);
			g = Math.floor(Math.random()*256);
			b = Math.floor(Math.random()*256);
			
			res += $('p').css('background', 'rgb(' + r + ',' + g + ',' + b + ')');
			
			
			
			
		})
		$('#btn1').click(function(){
			res = "font-size : " + $('p').css('font-size');
			
			// 현재의 배경색을 16진수로 출력			
			res += "background : " + $('p').css('backgroundColor')
			
			$('#result1').html(res);
		})
		
		$('#btn2').click(function(){
			// $('.box p').css('background', 'yellow');
			$('.box2 p').addClass('pbackcolor');
			
		})
		
		$('#btn3').click(function(){
			// $('.box p').css('background', 'white');
			$('.box2 p').removeClass('pbackcolor');
			
		})
		$('#btn4').click(function(){
			
				$('.box2 p').toggleClass('pbackcolor');
		
			
		})
		
					
	})
</script>
<style>
p {
	font-size: 1.5em;
}
.pbackcolor{
	background: yellow;
}
</style>
