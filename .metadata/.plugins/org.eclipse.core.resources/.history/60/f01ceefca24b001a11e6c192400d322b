<title>Insert title here</title>
<link rel="stylesheet" href="../CSS/mystyle.css">
<script src="../js/jquery-3.4.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() { //window.onload와 같다 바디가 실행되고난 후 실행되는 것 

		$('#btn1').on('click', function() {
			vh = $('body').html(); // getter
			alert(vh);

			// text : #result1에 출력시 모든 태그를 그냥 글자로 출력한다.
			$('#result1').text(vh);

			// html : #result1에 출력시 모든 태그가 실행 된다.
			$('#result1').html(vh); // setter
		})

		$('#btn2').click(function() {
			// body태그 안의 모든내용을 가져온다.
			vt = $('body').text();
			alert(vt);
			$('#result1').text(vt);
		})

		$('#btn3').on('click', function() {

			// p태그가 여러개인 경우 첫번째만 가져온다.
			ph = $('p').html(); // getter
			//alert(ph);

			$('#result1').html(ph);
			//$('#result1').text(ph);

		})

		$('#btn4').on('click', function() {

			// p태그안의 문자만 가져온다.
			// p태그가 여러개인 경우 모두 다 가져온다.
			pt = $('p').text(); // getter
			//alert(ph);

			$('#result1').text(pt);
			//$('#result1').text(pt);
		})

		$('#btn5').on('click', function() {
			str = "";
			pt = $('p').each(function() {
				str += $(this).html();

			})

			$('#result1').text(str);
		})
	})
</script>
</head>
