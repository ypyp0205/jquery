		$('#btn1').click(function() {

			$(document).ready(function() {
				$("span").parent().css({
					"color" : "red",
					"border" : "2px solid red"
				});
			});

		})

		$('#btn2').click(function() {

			$(document).ready(function() {
				$("span").parents().css({
					"color" : "red",
					"border" : "2px solid red"
				});
			});
			Result:

		})

		$('#btn3').click(function() {

			$(document).ready(function() {
				$("span").parentsUntil("div").css({
					"color" : "red",
					"border" : "2px solid red"
				});
			});
		})
	})
</script>
