	}

	window.onload = function() {
		document.body.style.background = 'lightpink';
		f = document.ff;
	}
	function loadProc() {
		document.body.style.background = 'lightyellow';
	}
	
	function nameProc()() {
		namevalue = f.name.value;
		lowervalue = namevalue.toLowerCase();
		
		f.name.value = lowervalue;
	}
	function selProc()() {
		
	}
