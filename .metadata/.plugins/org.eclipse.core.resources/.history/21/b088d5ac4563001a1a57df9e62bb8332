<script>
 $(function(){
	 $('#pass').on('focus', function(){
		 
		 $('.cpass span').remove();
		 $('.cpass img').remove();
		 
		 $('<span/>', {
			 'text' : '영문대소문자특수문자숫자조합4~10'
			
		 }).appendTo('.cpass');
	 })
	 $('#pass').on('blur', function(){
		 //정규식 체크
		 //맞다면 체크표시 
		 if(!passcheck()){
			 return false;
		 }
		 
		 $('.cpass span').remove();
		 
		 $('<img>', {
			 'src' : '../images/check.png'
		 }).appendTo('.cpass');
	 })
	$('#pass2').on('focus', function(){
		    $('.cpass2 img').remove();
		    $('.cpass2 span').remove();
			   $('<span/>', {
				   'text' : '비밀번호와 일치'
			 }).appendTo('.cpass2')
	}) 
	$('#pass2').on('blur', function(){
		   if(!pass2check()){
			 return false;
		   }
		   $('.cpass2 span').remove();
		   $('<img>', {
			   'src' : '../images/check.png'
		   }).appendTo('.cpass2');
	}) 
	$('#bir').on('focus', function(){
		    $('.cbir img').remove();
		    $('.cbir span').remove();
			   $('<span/>', {
				   'text' : '생년월일 입력'
			 }).appendTo('.cbir')
	}) 
	$('#bir').on('blur', function(){
		   if(!datecheck()){
			 return false;
		   }
		   $('.cbir span').remove();
		   $('<img>', {
			   'src' : '../images/check.png'
		   }).appendTo('.cbir');
	}) 
	 
	 
	 
	 ////////////////////////////////////
	 //아이디 중복검사 
	 $('#btnid').on('click', function(){
		 
		 if(!idcheck()){
			 return false;
		 }
		// console.log(idvalue);
		 $.ajax({
			 url : '/member/CheckId',
			 data : { 'id' : idvalue},
			 type : 'get',
			 dataType : 'json',
			 success : function(res){
				 $('#idchk').html(res.sw)
				            .css('color', 'red');
			 },
			 error : function(xhr){
				alert("상태 : " + xhr.status); 
			 }
		 })
	 })
	  
 })
</script>
