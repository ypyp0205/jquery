	<div class="box">
		<form name="ff">
		
			<table border="1">
				<tr>
					<th colspan="3">Select 객체 예제</th>
				</tr>
				<tr>
					<td class="m">
						<select name="left" multiple size=15>
						</select></td>
					<td class="m" id="mm">
						<input class="mb" type="button" value=">"><br>
						<input class="mb" type="button" value=">>"><br>
						<input class="mb" type="button" value="<"><br>
						<input class="mb" type="button" value="<<"><br>
					</td>
					<td class="m">
						<select name="right" multiple size=15>
						</select>
					</td>
				</tr>
				<tr>
					<td colspan="3">
						<input name="data" type="text">
						<button onclick="addProc()" id="b">추가하기</button>
					</td>
