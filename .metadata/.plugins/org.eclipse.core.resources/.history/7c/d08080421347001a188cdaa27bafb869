<link rel="stylesheet" href="../CSS/mystyle.css">
<script type="text/javascript">
		window.onload = function(){
			f = document.ff
			f.data.focus();
		}
		
		
		function addProc(){
			// 입력한 data값을 가져온다. - value;
			datavalue = f.data.value;
			
			// option 요소를 생성
			opt = document.createElement("option");
			
			// option의 value와 text를 설정
			opt.value = datavalue;
			opt.text = datavalue;
		
			// select의 name이 left인 것에 추가한다. 
			f.left.appendChild(opt);
		
			// 입력한 값을 지운다.
			f.data.value = "";
			
			// 커서는 입력 요소에 둔다.
			f.data.focus();
			
		}
	</script>
	<style>
		table{
			width : 400px;
			height : 500px;
			border-collapse: collapse;
		}
	
	
		th {
			width : 400px;
		    height : 60px;
		    text-align: center; 
		}
		 
		td {
			width : 100px;
		    height : 30px;
		    text-align: center;
		}
		
		.m {
			height : 200px;
		}
		
		#mm{
			width : 50px;
		}
		
		.mb{
			width : 30px;
			margin : 20px 0px 20px 0px;
		}
		
		#b{
			margin : 10px;
		}
		
		select{
			width : 100%;
			height : 100%;
		}

	</style>
