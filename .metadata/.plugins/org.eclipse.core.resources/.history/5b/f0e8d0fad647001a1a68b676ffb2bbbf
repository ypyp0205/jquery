<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../CSS/mystyle.css">
<script type="text/javascript">
	window.onload = function(){
		btn1 = document.getElementById('btn1');
		result1 = document.getElementById('result1');
	}
	
	function downProc() {
		// 버튼을 누를때
		btn1.style.background = "green";
		brn1.style.color = "yellow";
	}
	function upProc() {
		// 눌려진 버튼 놓을때
		btn1.style.background = "blue";
		brn1.style.color = "white";
	}
	function overProc() {
		// div에 마우스를 누르지 않고 올려놓을때
		result1.style.background = "skyblue"; 
		brn1.style.height = "50px";
	}
	function outProc() {
		// div에 마우스를 누르지 않고 올려놓을때
		result1.style.background = "white" 
		brn1.style.height = "auto";
	}
	function dblProc() {
		
	}
</script>
</head>
<body>

	<div class="box">
		<h2>mouse 이벤트</h2>
		<pre>
onmousedown
onmouseup
onmouseover
onmouseout
onclick
ondblclick
		</pre>
		<br>
		<button id="btn1" type="button" ondblclick="dblProc()"  onmousedown="downProc()" onmouseup="upProc()">open</button>
		<br>
		<div id="result1" onmouseover="overProc()" onmouseout="outProc()"></div>
	</div>
</body>
