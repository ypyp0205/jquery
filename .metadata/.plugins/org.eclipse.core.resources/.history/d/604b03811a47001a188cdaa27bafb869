<link rel="stylesheet" href="../CSS/mystyle.css">
<script type="text/javascript">
		window.onload = function(){
			f = document.ff
			f.data.focus();
		}
		
		
		function addProc(){
			// 입력한 data값을 가져온다. - value;
			datavalue = f.data.value;
			
			// 값이 공백이냐 - 종료
			if (datavalue.trim().length == 0) {
				alert("데이터를 입력하세요.");
				return;
			}
			
			// option 요소를 생성
			opt = document.createElement("option");
			
			// option의 value와 text를 설정
			opt.value = datavalue;
			opt.text = datavalue;
		
			// select의 name이 left인 것에 추가한다. 
			f.left.appendChild(opt);
		
			// 입력한 값을 지운다.
			f.data.value = "";
			
			// 커서는 입력 요소에 둔다.
			f.data.focus();
			
			
		}
		
		function toRight() {
			// 왼쪽 select에서 하나를 선택
			idx = f.left.selectedIndex;
			
			// 선택한 항목이 없으면(-1) 선택하세요. - return
			if (idx == -1) {
				alert("선택하세요.");
				return;
			}
			
			// 왼쪽에서 선택한 option의 값을 가져온다.
			lvalue = f.left.options[idx].value
			
			// option을 생성해서 오른쪽에 추가한다.
			opt = document.createElement("option");
			opt.value = lvalue;
			opt.text = lvalue;
			
			f.right.appendChild(opt);
			
			// 왼쪽에서 삭제하기
			f.left.removeChild(f.left.options[idx]);
		}
		function rightAll() {
			// 왼쪽 select에서 하나를 선택
			idx = f.left.all;
			
			// 선택한 항목이 없으면(-1) 선택하세요. - return
			if (idx == -1) {
				alert("선택하세요.");
				return;
			}
			
			// 왼쪽에서 선택한 option의 값을 가져온다.
			lvalue = f.left.options[idx].value
			
			// option을 생성해서 오른쪽에 추가한다.
			opt = document.createElement("option");
			opt.value = lvalue;
			opt.text = lvalue;
			
			f.right.appendChild(opt);
			
			// 왼쪽에서 삭제하기
			f.left.removeChild(f.left.options[idx]);
		}
		function toLeft() {
			// 오른쪽 select에서 하나를 선택
			idx = f.right.selectedIndex;
			
			// 선택한 항목이 없으면(-1) 선택하세요. - return
			if (idx == -1) {
				alert("선택하세요.");
				return;
			}
			
			// 오른쪽에서 선택한 option의 값을 가져온다.
			rvalue = f.right.options[idx].value
			
			// option을 생성해서 왼쪽에 추가한다.
			opt = document.createElement("option");
			opt.value = rvalue;
			opt.text = rvalue;
			
			f.left.appendChild(opt);
			
			// 오른쪽에서 삭제하기
			f.right.removeChild(f.right.options[idx]);
		}
		function leftAll() {
			
		}
	</script>
	<style>
