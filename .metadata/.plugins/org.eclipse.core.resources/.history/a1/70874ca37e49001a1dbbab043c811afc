<script type="text/javascript">
	$(function() {

		$('button').on('click', function() {
			//v1 = $('h1');
			//v1.css('color', 'blue');

			$('h1').css('color', 'blue');

			$('h1:eq(2)').css('color', 'red');

			//v2는 dom객체이다.
			v2 = $('h1')[3];
			
			//v2객체변수로 css()함수를 사용 할 수 없다.
			//v2.css('color', 'green');
			
			v2.style.color = 'green'; 
			
			//dom객체v2를 $()감싸면 jQuery객체로 변환되고
			//jQuery메소드 사용가능
			$(v2).css('color', 'hotpink');
			
		})
	})
</script>
</head>
