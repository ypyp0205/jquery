<script type="text/javascript">
	$(function() {
		$('#btn1').on('click', function(){
			
			
			// jQuery가 포함된 span태그 의 테두리 파랑 : 
				$('div:eq(2)').css('border', '2px solid orange');
				$('div:eq(3)').css('border', '5px solid green');
				$('span:eq(0)').css('border', '2px solid orange');
				$('span:eq(0)').css('color', 'red');
				$('span:eq(0)').css('font-weight', 'bold');
				$('span:eq(0)').css('font-size', 'large');
				$('span:eq(1)').css('border', '2px solid blue');
				$('div:eq(4)').css('border', '2px solid green');	
			// jQuery가 포함되지 않은 span 태그 의 테두리 빨강  : 
				
						
			// span을 갖는 div요소 태그 의 테두리   그린 
		   	
						
			// 아무것도 없는 빈 div 태그 의 테두리      
				
						
			// div 후손 span 태그 의 글자색  빨강, 크기,굵게
			
			
			
		})
		
		
		
		
	})
</script>


