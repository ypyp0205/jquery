<script type="text/javascript">
	$(function() {
		$('button:eq(0)').on('click', function(){
			
		//h2의 자식 a 태그의 스타일 에 테두리 설정 - solid
		$('.box1 h2>a').css('border', '2px solid red');
		
		
		//h2의 후손 a태그의 스타일 배경색 을 노란색으로 변경
		$('.box1 h2 a').css('background', 'yellow');
		})
		
		
			

	
		
		$('button:eq(1)').on('click', function(){
			
			//span태그의 배경색 변경- yellow
			$('.box2 span').css('background', 'yellow');
			
			//div의 모든 후손중  span 태그의 테두리  - red
			$('.box2 div span').css('border', '3px solid red');
			
			//div의 바로 다음 자식 span태그의 테두리  - blue
			$('.box2 div>span').css('border', '3px solid blue');
		})
		
	})
		
		
</script>
</head>
