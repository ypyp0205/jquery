<script>
		$(function () {
		$('#btn1').on('click',function(){
			  $(".box1 span").parent().css({"color": "red", "border": "2px solid red"});
			})
		$('#btn2').on('click',function(){
			 $(".box2 span").parents().css({"color": "blue", "border": "2px solid blue"});
		})
		$('#btn3').on('click',function(){
			 $(".box3 span").parentsUntil(".box3 div").css({"color": "green", "border": "2px solid green"});
		})
		
	})
</script>
