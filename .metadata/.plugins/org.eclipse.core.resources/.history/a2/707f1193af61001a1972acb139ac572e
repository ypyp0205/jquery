<script>
 $(function(){
	
	 //아이디 중복검사 
	 $('#btnid').on('click', function(){
	
		 idvalue =  $('#id').val().trim();
		 idlen = idvalue.length;
		
		 // 공백체크
		 if(idlen <= 0){
			 alert("아이디 입력");
			 return false;
		 }
		
		 // 길이 체크 4~8
		 if(idlen < 4 || idlen >8){
			 alert('id 4~8사이로 입력하세요.');
			 return false;
		 }
		 // 형식체크
		 idreg = /^[a-zA-Z]+[0-9]+$/
		 if(!(idreg.test(idvalue))){
			 alert("id 형식 오류");
			 return false;
		 }
		
		 console.log(idvalue);
		 $.ajax({
			 url : '/jqpro/CheckId',
			 data : { 'id' : idvalue},
			 type : 'get',
			 dataType : 'json',
			 success : function(res){
				 $('#idchk').html(res.sw)
				            .css('color', 'red');
			 },
			 error : function(xhr){
				alert("상태 : " + xhr.status); 
			 }
		 })
	 })
	
	 //우편번호 검색 
	 $('#zipBtn').on('click', function(){
		 window.open("zip.html", "_blank", "width=400 height=500");
	 })
	 
	 //제출 
	 $('#btnjoin').on('click', function(){
		 
		 console.log($('#ff').serialize());
		 
		 console.log($('#ff').serializeArray());
		 
		 // 입력데이터의 공백이나 형식 체크하고
		 // 올바른 데이터일 경우는 서버로 전송한다.
		
		 
		 $.ajax({
			 url : '/jqpro/MemberJoin',
			 type : 'post',
			 data : $('#ff').serializeArray(),
			 success : function(res){
				 $('#joinres').html(res.sw).css('color', 'red');
				 $('#reset').hide();
			 },
			 error : function(xhr){
				 alert("상태 : " + xhr.status);
			 },
			 dataType : 'json'
		 })
	 })
 })
 
 </script>
