<script>
	$(function(){
		$('#btn1').on('click',function(){
			
		$(".box1 li.start").next().css({"color": "red", "border": "2px solid red"});
		})
		
		$('#btn2').on('click',function(){
			
		$(".box1 li.start").nextAll().css({"color": "green", "border": "2px solid orange"});
		})
		
		$('#btn3').on('click',function(){
			
		$(".box1 li.start").nextUntil().css({"color": "black", "border": "2px solid yellow"});
		})
		
		$('#btn4').on('click',function(){
			$(".box2 span").parent().css({"color": "red", "border": "2px solid red"});
		})
		
		$('#btn5').on('click',function(){
			$(".box2 span").parents().css({"color": "red", "border": "2px solid cyan"});
		})
		
		$('#btn6').on('click',function(){
			$(".box2 span").parentsUntil().css({"color": "blue", "border": "2px solid blue"});
		})
		
		$('#btn7').on('click',function(){
			$(".box3 li.start").prev().css({"color": "red", "border": "2px solid red"});
		})
		
		$('#btn8').on('click',function(){
			$(".box3 li.start").prevAll().css({"color": "yellow", "border": "2px solid pink"});
		})
		
		$('#btn9').on('click',function(){
			$(".box3 li.start").prevUntil().css({"color": "red", "border": "2px solid black"});
		})
		
		$('#btn10').on('click',function(){
			$(".box4 li.start").siblings().css({"color": "red", "border": "2px solid red"});
		})
	})
</script>
<style>
