<script type="text/javascript">
	$(function(){

		$('#emp1').click(function(){
			$('#dd').empty();
		})
		
		$('#re1').click(function(){
			$('#dd').remove();
		})
		
		
		
		$('.pp').click(function(){
			$(this).css('font-size', '+=2px');
		})
		
		$('.pp').click(function(){
			$('#dd').remove();
		})
		
		
		
		
		
		
		
	})
</script>
