<script type="text/javascript">
	$(function(){

		$('#runBtn').click(function(){
			// 상태값 얻어오기
			res = "체크박스 : " + $('#checkTest').prop('checked') + "\n";
			res += "select : " + $('#selTest option:eq(0)').prop('selected') + "\n";
			res += "readonly : " + $('#txtTest').prop('readonly') + "\n";
			res += "disabled : " + $('#btnTest').prop('disabled') + "\n";
			res += "unabled : " + $('#runBtn').prop('unabled') + "\n";
				alert(res);
		})
		
	})
</script>
